<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content_list_item_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >

            
     <ImageView
            android:id="@+id/content_list_item_icon"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
     
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_toRightOf="@+id/content_list_item_icon"
	        android:layout_alignTop="@+id/content_list_item_icon" >

     
        <TextView
            android:id="@+id/content_list_item_titel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingRight="5dp"
            android:text="Medium Text"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="16sp" />

       <TextView
            android:id="@+id/content_list_item_desp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:paddingRight="5dp"
            android:text="Small Text"
            android:maxLines="2"
            android:ellipsize="end"
			android:textSize="12sp"
			android:textColor="#ff909090" /> 
			
       <LinearLayout
           	android:id="@+id/content_list_item_bottom_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="right|center_vertical"
	        android:layout_marginTop="5dp" >
			
       <ImageView
            android:id="@+id/small_icon_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_marginRight="5dp"/>
       
       <TextView
            android:id="@+id/comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="0"
			android:textSize="12sp"
			android:textColor="#ff909090" /> 
			
        <ImageView
            android:id="@+id/small_icon_vedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"/>
       
			
			</LinearLayout>

    </LinearLayout>
</RelativeLayout>